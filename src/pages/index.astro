---
import Layout from "../layouts/Layout.astro";

const name = "Pranith Chowdary Karumanchi";
const role = "AI Researcher • Data Scientist • LLM Engineer";
---

<Layout title={name}>

<!-- Header -->
<section class="mb-12">

  <h1 class="text-5xl font-bold mb-3">
    {name}
  </h1>

  <p class="text-xl text-gray-600 mb-4">
    {role}
  </p>

  <p class="text-gray-700 leading-relaxed">

    I work on Large Language Models, Deep Learning, and Reinforcement Learning.
    My goal is to build scalable AI systems and contribute to frontier research.

  </p>

</section>


<!-- Research Interests -->
<section class="mb-12">

  <h2 class="text-2xl font-semibold mb-4 border-b pb-2">
    Research Interests
  </h2>

  <ul class="list-disc list-inside text-gray-700 space-y-2">

    <li>Large Language Models (LLMs)</li>

    <li>Transformer Architectures</li>

    <li>Reinforcement Learning</li>

    <li>Multimodal Learning</li>

    <li>Efficient Deep Learning</li>

  </ul>

</section>


<!-- Equation example -->
<section class="mb-12">

  <h2 class="text-2xl font-semibold mb-4 border-b pb-2">
    Sample Equation
  </h2>

  <p class="text-gray-700 mb-4">
    Example from physics:
  </p>

  <div class="bg-white p-4 rounded shadow">

    $$
    E = mc^2
    $$

  </div>

</section>


<!-- Links -->
<section>

  <h2 class="text-2xl font-semibold mb-4 border-b pb-2">
    Links
  </h2>

  <div class="flex gap-6">

    <a href="https://github.com/YOUR_USERNAME"
       class="text-blue-600 hover:underline">
       GitHub
    </a>

    <a href="/papers"
       class="text-blue-600 hover:underline">
       Papers
    </a>

    <a href="/cv.pdf"
       class="text-blue-600 hover:underline">
       CV
    </a>

  </div>

</section>

</Layout>